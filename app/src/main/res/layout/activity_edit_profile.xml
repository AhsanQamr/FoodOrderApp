<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".NavDActivity.EditProfileA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="44dp"
                android:layout_height="39dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Update Profile"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:src="@drawable/icon_bear"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* field not to be updated leave empty or unchanged"
            android:textColor="@color/teal_700"
            android:gravity="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="#E64BEA"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="65dp">

            <EditText
                android:id="@+id/update_email"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/roundedrectangle"
                android:hint="Email"
                android:inputType="text"
                android:textColor="@color/black"
                >
            </EditText>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="#E64BEA"
            android:layout_marginHorizontal="20dp"
            android:layout_height="65dp">

            <EditText
                android:id="@+id/update_name"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/roundedrectangle"
                android:hint="Name"
                android:inputType="text"
                android:textColor="@color/black"
                >
            </EditText>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="#E64BEA"
            android:layout_margin="20dp"
            android:layout_height="65dp">

            <EditText
                android:id="@+id/update_address"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/roundedrectangle"
                android:hint="Address"
                android:inputType="text"
                android:textColor="@color/black"
                >
            </EditText>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="#E64BEA"
            android:layout_marginHorizontal="20dp"
            android:layout_height="65dp">

            <EditText
                android:id="@+id/update_phone"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/roundedrectangle"
                android:hint="Contact Number"
                android:inputType="phone"
                android:textColor="@color/black"
                >
            </EditText>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="#E64BEA"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="65dp">

            <EditText
                android:id="@+id/update_user_name"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/roundedrectangle"
                android:hint="User Name"
                android:inputType="text"
                android:textColor="@color/black"
                >
            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/update_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:paddingVertical="13dp"
            android:text="Update Profile"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:backgroundTint="#E64BEA"
            app:cornerRadius="10dp"
            android:textAllCaps="false">

        </com.google.android.material.button.MaterialButton>
    </LinearLayout>

</RelativeLayout>